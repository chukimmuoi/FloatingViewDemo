<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mExpandedView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/mExpandedImgMusic"
        android:layout_width="@dimen/layout_floating_width_icon_108"
        android:layout_height="@dimen/layout_floating_height_108"
        android:src="@drawable/ic_library_music_black_24dp" />

    <ImageView
        android:id="@+id/mExpandedImgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mExpandedImgMusic"
        android:src="@drawable/ic_close_black_24dp" />

    <ImageView
        android:id="@+id/mExpandedImgOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mExpandedImgMusic"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_open_in_new_black_24dp" />

</RelativeLayout>